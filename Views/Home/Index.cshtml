@model List<model_API>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="card">
    <div class="card-header">
        Lista Usuario
    </div>
    <div class="card-body">
        <!-- Enlace para agregar un nuevo usuario -->
        <a asp-action="Usuario" asp-controller="Home" asp-route-idUsuario="0" class="btn btn-success btn-sm">Nuevo Usuario</a>
    </div>
    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>Identificacion</th>
                <th>Titulo</th>
                <th>Cuerpo</th>
                <th>User Id</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <!-- Bucle para recorrer la lista de usuarios -->
            @foreach (var item in Model)
            {
                <tr>
                    <!-- Mostrar información de cada usuario -->
                    <td>@item.id</td>
                    <td>@item.title</td>
                    <td>@item.body</td>
                    <td>@item.userId</td>
                    <td>
                        <!-- Enlaces para editar y eliminar usuarios -->
                        <a asp-action="Usuario" asp-controller="Home" asp-route-idUsuario="@item.userId" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Eliminar" asp-controller="Home" asp-route-idUsuario="@item.userId" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
